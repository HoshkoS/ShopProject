<div class="mx-auto">
  <div class="w-full p-1 m-5 md:p-2">
    <div class="grid grid-cols-1 gap-4">
      <div class="text-3xl font-semibold text-center">
        <p><%= @product.name %></p>
      </div>

      <div>
        <p><%= @product.description %></p>
      </div>

      <div>
        <p>Price: <%= number_to_currency(@product.price, unit: "â‚´") %></p>
      </div>

      <div>
        <p>Available: <%= @product.balance %></p>
      </div>
    </div>

    <div class="relative mb-3">
      <% if @product.balance.nonzero? %>
        <%= render "carts/buy_form", product: @product %>
      <% end %>
    </div>

    <div class="inline-block ml-2">
      <%= link_to 'Back to products', products_path, class: "btn-gray" %>
    </div>
  </div>
</div>
