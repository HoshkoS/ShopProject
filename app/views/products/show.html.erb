<div class="mx-auto">
  <div class="w-full p-1 m-5 md:p-2">
    <div class="grid grid-cols-1 gap-4">
      <div class="text-3xl font-semibold text-center">
        <%= @product.name %>
      </div>

      <div>
        <%= @product.description %>
      </div>

      <div>
        Price: <%= number_to_currency(@product.price, :unit => "â‚´") %>
      </div>

      <div>
        Available: <%= @product.balance %>
      </div>
    </div>

    <div class="relative mb-3">
      <% if @product.balance.positive? %>
        <%= render "carts/buy_form", product: @product %>
      <% end %>
    </div>

    <div class="inline-block">
    <%= link_to 'Edit this product', edit_product_path(@product), class: "btn-gray" %>
    </div>

    <div class="inline-block ml-2">
      <%= button_to 'Destroy this product', product_path(@product), method: :delete, class: "btn-gray" %>
    </div>

    <div class="inline-block ml-2">
      <%= link_to 'Back to products', products_path, class: "btn-gray" %>
    </div>

  </div>
</div>
