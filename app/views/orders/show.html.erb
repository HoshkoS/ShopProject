<div class="flex w-full mx-auto">
  <div class="mx-auto">
    <div class="flex flex-col text-base text-neutral-600 dark:text-neutral-900">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
          <div class="overflow-hidden">
            <div class="block rounded-lg bg-white p-6 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-300">
              <ul class="ms-6 w-96">
                <h1 class="mb-5 text-3xl font-bold">Order â„–<%= @order.id %></h1>
            <li class="mb-4"><%= full_name(@order) %></li>
            <li class="mb-4"><%= @order.address %></li>
            <li class="mb-4"><%= @order.phone %></li>
          </ul>
              <table class="min-w-full text-sm font-light text-left ">
                <thead class="font-medium border-b dark:border-neutral-500">
                  <tr>
                    <th scope="col" class="px-6 py-4">Name</th>
                    <th scope="col" class="px-6 py-4">Price</th>
                    <th scope="col" class="px-6 py-4">Amount</th>
                    <th scope="col" class="px-6 py-4">Sum</th>
                  </tr>
                </thead>

                <tbody>
                  <% @order.products.each do |product| %>
                    <tr class="border-b hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                      <td class="px-6 py-2 cart-item"><%= product.name %></td>
                      <td class="px-6 py-2 cart-item"><%= number_to_currency(product.price) %></td>
                      <td class="px-6 py-2 text-center cart-item"><%= @order.product_amount(product) %></td>
                      <td class="px-6 py-2 cart-item"><%= number_to_currency(@order.product_sum(product)) %></td>
                    </tr>
                  <% end %>
                  <tr class="border-b dark:border-neutral-500">
                    <td colspan="3" class="px-6 py-2 whitespace-nowrap">
                      Total sum
                    </td>
                    <td class="px-6 py-2 whitespace-nowrap"><%= number_to_currency(@order.total_sum) %></td>
                  </tr>

                </tbody>
              </table>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="inline-block ml-2">
      <%= link_to 'Edit this order', edit_order_path(@order), class: "text-white bg-gray-500 font-medium rounded-lg px-5 py-2.5 text-sm" %>
    </div>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this order', order_path(@order), method: :delete, class: "text-white bg-gray-500 font-medium rounded-lg px-5 py-2.5 text-sm" %>
    </div>
    <div class="inline-block ml-2">
      <%= link_to 'Back to products', products_path, class: "text-white bg-gray-500 font-medium rounded-lg px-5 py-2.5 text-sm" %>
    </div>
  </div>
</div>
