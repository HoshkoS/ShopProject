<div class="w-full mx-auto md:w-2/3">
  <h1 class="mt-4 text-4xl font-bold">Create your order</h1>
  <p class="mt-5 text-2xl">You chose:</p>

  <table class="min-w-full p-3 my-6 text-sm font-light text-left border-2">
            <thead class="font-medium border-b dark:border-neutral-500">
              <tr>
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">Price</th>
                <th scope="col" class="px-6 py-4">Amount</th>
                <th scope="col" class="px-6 py-4">Sum</th>
              </tr>
            </thead>
              <tbody>
                <% @session_products.each do |product| %>
                  <tr class="border-b hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                    <td class="px-6 py-4 whitespace-nowrap"><%= product.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(product.price) %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= session.dig(:products, product.id.to_s) %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(session_product_sum(product)) %></td>
                  </tr>
                <% end %>
                <tr class="border-b dark:border-neutral-500">
                  <td colspan="3" class="px-6 py-4 font-bold whitespace-nowrap">
                    Total sum
                  </td>
                  <td class="px-6 py-4 font-bold whitespace-nowrap"><%= number_to_currency(@session_sum) %></td>
                </tr>
              </tbody>
          </table>

  <%= render "orders/form", order: @order %>

  <%= link_to 'Back to cart', cart_path, class: "text-white bg-gray-500 font-medium rounded-lg px-5 py-2.5 text-sm" %>
</div>
