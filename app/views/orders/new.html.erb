<div class="w-full mx-auto md:w-2/3">
  <h1 class="mt-4 text-4xl font-bold">Create your order</h1>
  <p class="mt-5 text-2xl">You chose:</p>

  <table class="min-w-full p-3 my-6 text-sm font-light text-left border-2">
    <thead class="font-medium border-b dark:border-neutral-500">
      <tr>
        <th scope="col" class="table-item">Name</th>
        <th scope="col" class="table-item">Price</th>
        <th scope="col" class="table-item">Amount</th>
        <th scope="col" class="table-item">Sum</th>
      </tr>
    </thead>
    <tbody>
      <% @session_manager.items.each do |product| %>
        <tr class="border-b hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
          <td class="table-item"><%= product.name %></td>
          <td class="table-item"><%= number_to_currency(product.price, :unit => "₴") %></td>
          <td class="table-item"><%= session.dig(:products, product.id.to_s) %></td>
          <td class="table-item"><%= number_to_currency(@session_manager.product_sum(product), :unit => "₴") %></td>
        </tr>
      <% end %>
      <tr class="border-b dark:border-neutral-500">
        <td colspan="3" class="font-bold table-item">
          Total sum
        </td>
        <td class="font-bold table-item"><%= number_to_currency(@session_manager.sum, :unit => "₴") %></td>
      </tr>
    </tbody>
  </table>

  <%= render "orders/form", order: @order %>

  <%= link_to 'Back to cart', cart_path, class: "btn-gray" %>
</div>
