<%= simple_form_for order, defaults: { input_html: { class: 'input-field w-2/3' } } do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.button :submit, class: 'text-white font-bold rounded-lg px-5 py-2.5 mb-4 bg-amber-600 hover:bg-amber-700 text-base' %>
<% end %>
